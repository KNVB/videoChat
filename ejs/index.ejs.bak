<html>
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
		<!-- Optional JavaScript -->
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
		<script src="js/webrtc.js"></script>
		<script>
			var selfView;
			var webRTC=new WebRTC();
			$( document ).ready(function(){
				selfView=document.getElementById("selfView");
				$("#audioSrcLabel").click(function (){
					if ($(this).hasClass("active")) {
						$(this).removeClass("btn-success").addClass("btn-danger");
						$(this).children(".badge").removeClass("badge-success").addClass("badge-danger");
						$(this).children(".badge").text("No");
					} else {
						$(this).removeClass("btn-danger").addClass("btn-success");
						$(this).children(".badge").removeClass("badge-danger").addClass("badge-success");
						$(this).children(".badge").text("Yes");
					}
				});
				$(window).resize(()=>{
					$("html,body").height(window.innertHeight);
				});
				var messageBox=document.getElementById("message");
<%				
				if 	(typeof event!="undefined") {
					switch (event) {
						case "duplicateEmail":%>
							messageBox.innerHTML="The entered email address(i.e. <%=user.email%>) has been used by another user, please use another one.";
							document.getElementById("email").focus();
<%							break;
						case "logoutSuccess":%>
							messageBox.innerHTML="<%=alias%> has logged out successfully.";
<%							break;
					}
				}%>				
			});
			function clearVideo(){
				if (selfView.srcObject!=null) {
					selfView.srcObject.getTracks().forEach((track)=>{
						track.stop();
					});
					selfView.srcObject=null;
				}
			}
			function setupVideo(stream){
				selfView.srcObject=stream;
				stream.getTracks().forEach((track)=> {
					track.onended=(()=>{
						track.stop();
						if (selfView.srcObject!=null)
							selfView.srcObject=null;
					});
				});
			}
			async function updateSrc(){
				var videoSrc=document.getElementById("videoSrc");
				
				webRTC.setLogger(writeLog);
				clearVideo();
				switch ($(videoSrc).val()){
					case "screen":	var stream=await webRTC.getShareDesktopVideo();
									if (stream==null) {
										alert("Fail to get video from share desktop");
									} else {
										setupVideo(stream);
									}
									break;
					
					case "webCam":	var stream=await webRTC.getWebCamVideo();
									if (stream==null) {
										alert("Fail to get video from web cam");
									} else {
										setupVideo(stream);
									}
									break;
				}				
			}
			function writeLog(message){
				console.log(message);
			}
		</script>
		<style>
			video{
				object-fit:cover;
			}
		</style>	
	</head>
	<body class="p-1">
		<form class="p-0" method="post" action="/login">
			<div class="p-0 container-fluid d-flex h-100 flex-column border border-danger">
				<div class="p-0 row h-50 no-gutters">
					<div class="p-0 col-12 col-sm-12 col-lg-12 col-xl-12 position-relative">
						<video id="selfView" class="h-100 w-100 position-absolute" autoplay controls muted>
						</video>
					</div>
				</div>
				<div class="p-0 row h-50 border border-secondary no-gutters">
					<div class="col p-1 d-flex flex-column">
						<div class="d-flex flex-row align-items-center justify-content-center">
							<div class="btn-group-toggle p-1">
								<label class="btn-sm btn btn-lg btn-success">
									Share 
									<select name="videoSrc" id="videoSrc" class="bg-success text-white" onchange="updateSrc()">
										<option value="no" >No</option>
										<option value="webCam">Web Cam</option>
										<option value="screen">Screen</option>
									</select>
									Video
								</label>
							</div>
							<div class="btn-group-toggle p-1">
								<label class="btn-sm btn btn-lg btn-success">
									Share Audio
									<select name="shareAudio" id="shareAudio" class="bg-success text-white">
										<option value="yes">Yes</option>
										<option value="no" >No</option>
									</select>
								</label>
							</div>
						</div>
						
						<table class="w-100">
							<tr>
								<td style="text-align:right">
									Your alias:&nbsp;&nbsp;
								</td>
								<td>
									<input type="text" required name="alias">
								</td>	
							</tr>
							<tr>
								<td style="text-align:right">
									Your email address:&nbsp;&nbsp;
								</td>
								<td>
									<input type="email" id="email" required name="email">
								</td>	
							</tr>
							
						</table>
<% if (typeof roomId=='undefined') {%>						
						<div class="border border-warning d-flex flex-row justify-content-around p-1">
							<div class="btn-group-toggle d-flex justify-content-center p-1 w-100">
								<button class="btn-sm btn btn-lg btn-success" name="action" value="createRoom">Create a meeting</button>
							</div>
						</div>
<%} else {%>
						<div class="border border-warning d-flex flex-row justify-content-around p-1">
							<div class="btn-group-toggle d-flex justify-content-center p-1 w-100">
								<button class="btn-sm btn btn-lg btn-success" name="action" value="joinRoom">Join a meeting</button>
							</div>
						</div>
<%}%>						
						<div id="message" class="bg-danger text-white">
						</div>
					</div>		
				</div>
			</div>
			<input type="hidden" name="roomId" value="<%=((typeof roomId=='undefined')?'':roomId)%>">
		</form>
	</body>
</html>